<%- include('../partials/header') %>

<div id="live-feed-container">
<% if (projects.length) { %>
    <% for (let idx = 0; idx < projects.length; idx++) { %>
        <% const p = projects[idx]; %>
        <% if (idx > 1 && !user) { %>
            <div id="more-login">
                <p>Log in with Google to see more posts</p>
                <a href="/auth/google">
                    <button>
                        <img class="google-icon" src="https://i.imgur.com/FHjYyi0.png">
                        <p>&nbsp;Log In</p>
                    </button>
                </a>
            </div>
            <% break; %>
        <% } %>

        <div id="live-feed-tile">
            <div class="details">
                <h5><%= p.title %></h5>
                <br>
                <div class="creator">
                    <img src="<%= p.creator.avatar %>">
                    <p><%= p.creator.name %></p>
                </div>
                <br>
                <p><b><i>Start Date:</i></b> <%= p.startDate.toLocaleString('en-US', { dateStyle: 'full' }) %></p>
                <p><b><i>Difficulty:</i></b> <%= p.difficulty %></p>
                <p><b><i>Description:</i></b> <%= p.description %></p>
                <p><b><i>Complete:</i></b> <%= p.complete ? 'Yes' : 'In Progress' %></p>
                <a href="/projects/<%= p._id %>"><button>See more</button></a>
            </div>
            <div class="tile">
                <img src="<%= p.image %>">
            </div>
        </div>
        
    <% } %>

<% } else { %>
    <p id="no-projects">There are no posts to show</p>
<% } %>
</div>
<%- include('../partials/footer') %>